<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Minsal\ModeloBundle\Entity\CtlProducto" table="ctl_producto">
    <indexes>
      <index name="fki_esta_prod" columns="estado_producto"/>
      <index name="fki_producto_establecimiento" columns="establecimiento_producto"/>
      <index name="fki_producto_unidad_medida" columns="unidad_medida_producto"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="ctl_producto_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="codigoProducto" type="string" column="codigo_producto" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nombreProducto" type="string" column="nombre_producto" length="1000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="declargo" type="string" column="declargo" length="1000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="unidadMedidaProducto" target-entity="CtlUnidadMedida" fetch="LAZY">
      <join-columns>
        <join-column name="unidad_medida_producto" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="estadoProducto" target-entity="CtlEstados" fetch="LAZY">
      <join-columns>
        <join-column name="estado_producto" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="establecimientoProducto" target-entity="CtlEstablecimiento" fetch="LAZY">
      <join-columns>
        <join-column name="establecimiento_producto" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
